#: import NoTransition kivy.uix.screenmanager.NoTransition
ScreenManager:
    transition: NoTransition()
    TitleView:
    GameView:
    GameOverView:


<TitleView>
    name: 'TitleView'
    BoxLayout:
        orientation:'vertical'
        Label:
            text:'Snake'
            font_size: '100dp'
            size_hint: 1, .6
        Button:
            text:'Start'
            size_hint: 1, .2
            on_press: app.root.current = 'GameView'
        Button:
            text:'Exit'
            size_hint: 1, .2
            on_press: app.root.current = 'GameOverView' #TODO for testing; delete me


<GameView>
    name: 'GameView'
    canvas.before:
        Color:
            rgb: 143/255, 12/255, 166/255 #Color is tentative
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation:'vertical'
        size_hint: 1, 0.1
        BoxLayout:
            orientation:'horizontal'
            size_hint: 1, 0.1
            Widget:
                size_hint: 0.6, 1
            Button:
                text:'Placeholder for score-thing image'
                size_hint: 0.2, 1
            Label:
                text:'<score>'
                size_hint: 0.2, 1

    
        


<GameOverView>
    name: 'GameOverView'
    BoxLayout:
        orientation:'vertical'
        Label:
            text: 'Game Over!'
            font_size: '100dp'
            size_hint: 1, .5
        Label:
            text: 'Score was: <score>'
            font_size: '40dp'
            size_hint: 1, .2
        BoxLayout:
            size_hint: 1, .3
            orientation:'horizontal'
            Button:
                text:'Play Again'
                on_press: app.root.current = 'GameView'
            Button:
                text:'Main Menu'
                on_press: app.root.current = 'TitleView'