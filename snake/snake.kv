<TitleView>:
    name: 'TitleView'
    BoxLayout:
        orientation:'vertical'
        Label:
            text:'Snake'
            font_size: '100dp'
            size_hint: 1, .6
        Button:
            text:'Start'
            size_hint: 1, .2
            on_press: app.root.current = 'GameView'
        Button:
            text:'Exit'
            size_hint: 1, .2
            on_press: app.root.current = 'GameOverView' #TODO for testing; delete me



<GameView>:
    name: 'GameView'
    canvas.before:
        Color:
            rgb: 191/255, 215/255, 234/255 #Color is tentative
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation:'vertical'
        BoxLayout:
            orientation:'horizontal'
            size_hint: 1, 0.1
            Widget:
                size_hint: 0.6, 1
            Button:
                text:'Placeholder for score-thing image'
                #on_press: app.root.current = 'GameOverView'
                #on_press: root.grid.segments = [34]
                size_hint: 0.2, 1
            Label:
                text:'<score>'
                size_hint: 0.2, 1
        AnchorLayout:
            id: anchor
            anchor_x: 'center'
            anchor_y: 'center'
            #GameGrid goes here
            
            

<GameOverView>:
    name: 'GameOverView'
    BoxLayout:
        orientation:'vertical'
        Label:
            text: 'Game Over!'
            font_size: '100dp'
            size_hint: 1, .5
        Label:
            text: 'Score was: <score>'
            font_size: '40dp'
            size_hint: 1, .2
        BoxLayout:
            size_hint: 1, .3
            orientation:'horizontal'
            Button:
                text:'Play Again'
                on_press: app.root.current = 'GameView'
            Button:
                text:'Main Menu'
                on_press: app.root.current = 'TitleView'

